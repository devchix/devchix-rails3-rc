!!!
%html
  %head
    %title
      Devchix
    = stylesheet_link_tag :all 
    = javascript_include_tag :defaults 
    = stylesheet_link_tag '960','text','reset', 'application', :media => 'screen'
 
    = javascript_include_tag 'application'
    = csrf_meta_tag 

  %body
    #header
      .container_16.clearfix
        #headline
          %h2 DevChix 
        #menu
          .grid_10.alpha
            =link_to "Home", root_url
            - if user_signed_in?
              |
              =link_to "All Profiles", profiles_url
              |
              =link_to "My Profile", profile_path(current_user.id)
              |
              =link_to  'Logout', destroy_user_session_url
          .grid_5.omega.logged_in_as
            - if user_signed_in?
              Logged in as:&nbsp;
              =current_user.email
            - else 
              |
              =link_to  'Login', user_session_url
    #main
      .flash.container_16.clearfix
        %p{:style => "color: green"}
          =flash[:notice]
        %p{:style => "color: red"}
          = flash[:alert] 
      #contents.container_16.clearfix
        #content
          =yield
    #footer
      #footer_content.container_16
        %p
          &copy;DevChix 2010

